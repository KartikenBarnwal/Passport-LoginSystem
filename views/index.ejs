<!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
<html lang="en">
<head>
   <link rel="stylesheet" href="index.css">
   <link rel="icon" href="https://lh3.googleusercontent.com/a-/AOh14GhOePmZG8g0wja3nBL_o7igPEyY8svB8UQuXjC4Gg=s120-cc-rg" type="image/icon type">
    <title>Sign Up</title>
    <!-- https://cdn.wallpapersafari.com/92/64/hBkoyj.jpg -->
    <script>
       
    
        function validate()
        {
            var username=document.getElementById("uname");
            var email=document.getElementById("email");
            var password=document.getElementById("pass");
            var rpassword=document.getElementById("rpass");
            if(username.value.trim()=="")
            {
                username.style.borderColor="red";
                alert("Blank Username!");
                return false;
            }
            else if(email.value.trim()=="")
            {
                email.style.borderColor="red";
                alert("Blank Email!");
                return false;
            }
            else if(password.value.trim()=="")
            {
                password.style.borderColor="red";
                alert("Blank password!");
                return false;
            }
            else if(rpassword.value.trim()=="")
            {
                rpassword.style.borderColor="red";
                alert("Confirm Password!");
                return false;
            }
        }
        function passwordvalidate()
        {
            var pass=document.getElementById("pass");
            var rpass=document.getElementById("rpass");
            if(pass.value.length>=8 && pass.value.length<=16)
            {
                pass.style.borderColor="#00FF00";
            }
            else
            {
                pass.style.borderColor="red"
            }

            if(rpass.value==pass.value&&pass.value.trim()!="")
            {
                rpass.style.borderColor="#00FF00";
                document.getElementById("txt4").style.color="green";
                document.getElementById("txt4").innerHTML="Password matched."
            }
            else
            {
                rpass.style.borderColor="red";
                document.getElementById("txt4").innerHTML="Password did not match.";
            }
        }
        function offline()
        {
            alert("Oops! Make sure have an internet connection...")
            
        }
    </script>
</head>
<body onoffline="offline()">
    <div id="box">
        <div id="leftbox">
            <h1>Sign Up</h1>
            <form onsubmit="return validate()" action="/users/signup" method="POST">
                <input type="text" name="name" placeholder="Username" id="uname" autocomplete="off" autofocus spellcheck="false">
                <input type="email" name="email" placeholder="Email" id="email" spellcheck="false">
                <input type="password" name="password" placeholder="Password (8-12 characters)" id="pass" onkeyup="passwordvalidate()">
                <input type="password" placeholder="Confirm Password" id="rpass" onkeyup="passwordvalidate();"><br><span id="txt4"></span>
                <input type="submit">
            </form>
            <a href="/login">Already have an account?</a>
        </div>
        <div id="rightbox">
            <span class="signinwith">Sign In With
            <br>Social Network</span>

            <button class="facebook">Sign in with Facebook</button>
            <button class="twitter">Sign in with Twitter</button>
            <button class="google">Sign in with Google+</button>
        </div>
        <div class="or">OR</div>
    </div>
</body>
</html>